@model SportsStore.ViewModels.ProductListViewModel
@{
    ViewData["Title"] = "Home Page";
}
@foreach (Product p in Model.Products)
{
    @await Html.PartialAsync("ProductSummary", p)
}
<div page-model="@Model.PagingInfo" page-action="List" total-pages="@System.Convert.ToString(Model.PagingInfo.TotalPages)"
     page-classes-enabled="true" page-class="btn" page-class-normal="btn-default" page-class-selected="btn-primary"
     page-url-category="@Model.CurrentCategory" class="btn-group pull-right">
</div>