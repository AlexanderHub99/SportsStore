@model SportsStore.ViewModels.ProductListViewModel
@{
    ViewData["Title"] = "Home Page";
}

@foreach (var p in Model.Products)
{
    <div>
        <h3>@p.Name</h3>
        @p.Description
        <h4>@p.Price.ToString("c")</h4>
    </div>
}

<div page-model="@Model.pagingInfo" page-action="List" total-pages="@System.Convert.ToString(Model.pagingInfo.TotalPages)" view-></div>